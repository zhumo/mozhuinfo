$black: #000;
$beige: #eee;
$light-gray: #999;
$blue: #0909b9;
$dark-red: #bd2600;
$forest-green: #057100;
$gray: #555;
$orange: #d09324;
$pink: #ca43bd;

$base-color: $black;
$codeblock-background: $beige;
$comment: $light-gray;
$keyword: $blue;
$namespace: $dark-red;
$variable-name: $forest-green;
$punctuation-color: $gray;
$symbol: $pink;
$string: $pink;
$integer: $pink;
$keyword-2: $orange;

.highlighter-rouge {
  padding: 0.1em 1em;
  background-color: $codeblock-background;
  color: $base-color;
  .gl {
    color: #dee5e7;
    background-color: #4e5d62;
  }
  .gp {
    color: #a8e1fe;
    font-weight: bold;
  }

  .c, .cd, .cm, .c1, .cs {
    color: #6c8b9f;
    font-style: italic;
  }

  .cp {
    color: #b2fd6d;
    font-weight: bold;
    font-style: italic;
  }

  .err {
    color: #fefeec;
    background-color: #cc0000;
  }

  .gr {
    color: #cc0000;
    font-weight: bold;
    font-style: italic;
  }

  .k, .kd, .kv {
    color: $keyword;
    font-weight: bold;
  }

  .o {
    color: $base-color;
  }

  .ow {
    color: #4df4ff;
    font-weight: bold;
  }

  .p, .pi {
    color: $punctuation-color;
  }

  .gd {
    color: #cc0000;
  }

  .gi {
    color: #b2fd6d;
  }

  .ge {
    font-style: italic;
  }

  .gs {
    font-weight: bold;
  }

  .gt {
    color: #dee5e7;
    background-color: #4e5d62;
  }

  .kc {
    color: #f696db;
    font-weight: bold;
  }

  .kn {
    color: #ffb000;
    font-weight: bold;
  }

  .kp {
    color: $keyword-2;
    font-weight: bold;
  }

  .kr {
    color: #ffb000;
    font-weight: bold;
  }

  .gh {
    color: #ffb000;
    font-weight: bold;
  }

  .gu {
    color: #ffb000;
    font-weight: bold;
  }

  .kt {
    color: #b2fd6d;
    font-weight: bold;
  }

  .no {
    color: $namespace;
    font-weight: bold;
  }

  .nc {
    color: $namespace;
    font-weight: bold;
  }

  .nd {
    color: #b2fd6d;
    font-weight: bold;
  }

  .nn {
    color: #b2fd6d;
    font-weight: bold;
  }

  .bp {
    color: $namespace;
    font-weight: bold;
  }

  .ne {
    color: #b2fd6d;
    font-weight: bold;
  }

  .nl {
    color: #ffb000;
    font-weight: bold;
  }

  .nt {
    color: #ffb000;
    font-weight: bold;
  }

  .mf, .mh, .mi, .il, .mo, .mb, .mx {
    color: $base-color;
  }

  .m {
    color: $integer;
  }

  .ld {
    color: #f696db;
    font-weight: bold;
  }

  .ss {
    color: $symbol;
    font-weight: bold;
  }

  .s, .sd, .sb, .sh, .sx, .sr, .s1 {
    color: $comment;
  }

  .s2 {
    color: $string;
  }

  .se {
    color: #4df4ff;
    font-weight: bold;
  }

  .sc {
    color: #4df4ff;
    font-weight: bold;
  }

  .si {
    color: #4df4ff;
    font-weight: bold;
  }

  .nb {
    color: $keyword-2;
    font-weight: bold;
  }

  .ni {
    color: #999999;
    font-weight: bold;
  }

  .w {
    color: #BBBBBB;
  }

  .go {
    color: #BBBBBB;
  }

  .nf {
    color: $base-color;
  }

  .py {
    color: #a8e1fe;
  }

  .na {
    color: #a8e1fe;
  }

  .nv, .vc, .vg, .vi {
    color: $variable-name;
    font-weight: bold;
  }
}
