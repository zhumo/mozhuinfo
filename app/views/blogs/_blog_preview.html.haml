.blog-preview{ "data-blog-id": blog.id }
  %h1.blog__title
    = page.blog_title_link(blog)
    - if blog.draft?
      %span.blog__draft-icon.badge.badge--warning draft
  .blog__summary
    = blog.preview
    = page.read_more_button(blog)
  .blog__timestamp
    = blog.timestamp
  - if authenticated?
    .blog__actions
      = page.edit_blog_button(blog)
      |
      = page.delete_blog_button(blog)
