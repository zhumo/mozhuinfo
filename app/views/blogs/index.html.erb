<p id="notice"><%= notice %></p>

<h1>Listing Blogs</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <% if authenticated? %>
        <th colspan="3"></th>
      <% else %>
        <th colspan='1'></th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% @page.blogs.each do |blog| %>
      <tr>
        <td><%= blog.title %></td>
        <td><%= blog.preview %></td>
        <td><%= @page.show_blog_button(blog) %></td>
        <% if authenticated? %>
          <td><%= @page.edit_blog_button(blog) %></td>
          <td><%= @page.delete_blog_button(blog) %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if authenticated? %>
  <%= @page.new_blog_button %>
<% end %>
