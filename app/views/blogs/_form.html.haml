= form.render_form do |f|
  = form.render_errors(f)

  .form__field
    = f.label :title
    = f.text_field :title
  .form__field
    = f.label :summary
    = f.text_field :summary
  .form__field
    = f.label :body
    = f.text_area :body
  .form__actions
    = f.submit 'Save', class: 'button button--blank'
    = f.submit 'Publish', class: 'button button--success'
